@model IEnumerable<NovelWeb_SS5.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-success text-center">Chat Room</h2>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<table class="table table-hover">

    @foreach (var item in Model)
    {
        <tr>
            <td class=" text-center">
                <span style="margin-right:16px; color:darkslategrey; font-size:17px"> @item.userName:  </span>
                <span style="font-size:20px"> @Html.DisplayFor(modelItem => item.noiDungcmt)</span>
                <span style="margin-left:20px; font-size:14px">  @Html.DisplayFor(modelItem => item.ngay)</span>
            </td>
        </tr>
    }

    <tr>
        <td>

            @using (Html.BeginForm("PostReply", "Comment", FormMethod.Post))
            {
                if (Session["UserId"] != null && Session["UserName"] != null)
                {
                    <input type="text" name="CommentText" style="width:100%; height:60px; font-size:20px; margin-top:10px" />
                    <br />
                    <input type="submit" value="Post Comment" class="btn-success" style="margin-top:10px;" />
                    <button type="submit" value="Post Comment" class="btn-dark" style="margin-top:10px;">Send</button>

                }

            }
        </td>
    </tr>
</table>