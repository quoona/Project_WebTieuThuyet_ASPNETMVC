@model NovelWeb_SS5.Models.Chuong

@{
    ViewBag.Title = "ChiTietChuong";
    Layout = "~/Views/Shared/_LayoutTruyenChiTiet.cshtml";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <title></title>
    <link href="~/Content/bootstrap-readable.css" rel="stylesheet" />
    <style>

        body {
            padding: 25px;
            background-color: white;
            color: black;
            font-family: "Palatino Linotype","Arial","Times New Roman",sans-serif;
            line-height: 180%;
            color: #2b2b2b;
            font-size: 22px;
            text-align: left;
            word-wrap: break-word;
        }

        .dark-mode {
            background-color: #222;
            color: hsla(0,0%,100%,.75);
        }
    </style>
</head>
<body>

    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index","HomeTruyens" )">Home</a></li>
        @*xem cho nay--------------------*@
        <li><a href="@Url.Action("TruyenDetails", new { id = Model.idTruyen })">Danh Sách Chương</a></li>
        <li class="active">@Html.DisplayFor(x => x.soChuong)</li>
        <li>
            <button type="button" class="btn btn-default" onclick="myFunction()">

                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-moon-stars-fill" viewBox="0 0 16 16">
                    <path d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278z" />
                    <path d="M10.794 3.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387a1.734 1.734 0 0 0-1.097 1.097l-.387 1.162a.217.217 0 0 1-.412 0l-.387-1.162A1.734 1.734 0 0 0 9.31 6.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387a1.734 1.734 0 0 0 1.097-1.097l.387-1.162zM13.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.156 1.156 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.156 1.156 0 0 0-.732-.732l-.774-.258a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732L13.863.1z" />
                </svg>
            </button>
        </li>
    </ul>
    <h2 class="text-center" style="color: gray">@Html.DisplayFor(x => x.soChuong) </h2>
    <h3 class="text-center"> @Html.DisplayFor(x => x.tenChuong)  </h3>

    <div class=" container">

        <div class="row">

            <div class="col-12" style="word-wrap: break-word; font-size: larger;">
                <p class="text-justify">
                    @Html.Raw(Model.noiDung)
                </p>
            </div>
        </div>
    </div>

    <script>
        function myFunction() {
            var element = document.body;
            element.classList.toggle("dark-mode");
        }
    </script>

    <ul class="pager">
        <li><a href="@Url.Action("ChiTietChuongNext",new { id = Model.idChuong - 2})">Previous</a></li>
        <li><a href="@Url.Action("ChiTietChuongNext",new { id = Model.idChuong})">Next</a></li>
    </ul>
</body>
</html>