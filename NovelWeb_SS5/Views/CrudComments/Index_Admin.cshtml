@model IEnumerable<NovelWeb_SS5.Models.Comment>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 class="text-success text-center">Chat Room</h2>

<link href="~/Content/bootstrap-readable.css" rel="stylesheet" />
<table class="table table-hover">

    @foreach (var item in Model)
    {
        <tr>
            <td class=" text-center">

                <span style="margin-right:16px; color:darkslategrey; font-size:17px"> @item.userName:  </span>
                <span style="font-size:20px"> @Html.DisplayFor(modelItem => item.noiDungcmt)</span>
                <span style="margin-left:20px; font-size:14px">  @Html.DisplayFor(modelItem => item.ngay)</span>
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.idCmt })
            </td>
        </tr>
    }

    <tr>
        <td>

            @using (Html.BeginForm("PostReply", "CrudComments", FormMethod.Post))
            {
                if (Session["UserId"] != null && Session["UserName"] != null)
                {
                    <input placeholder="Gõ gì đó.." type="text" class="form-control" name="CommentText" style="width:100%; height:60px; font-size:20px; margin-top:10px" />
                    <br />
                    <button type="submit" value="Okay" class="btn btn-success" style="margin-top:10px;">Send </button>

                }

            }
        </td>
    </tr>
</table>